# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# This file is the top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Bash files
[*.sh]
indent_size = 2

# JSON/YAML files
[*.{json,yml}]
indent_size = 2
insert_final_newline = false

# JS/HTML files
[*.{js,html}]
indent_size = 2

[Makefile]
indent_style = tab
